<h1>Search Test</h1>
<hr />
<h2>scQueryableResults Results</h2>
<ul>
	@{
		if (scQueryableResults != null)
		{
			foreach (var result in scQueryableResults)
			{
				<li>@result.Document.Name | @result.Document.Path</li>
			}
		}
		else
		{
			<li>Object is null</li>
		}
	}
</ul>
